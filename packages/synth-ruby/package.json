{
  "name": "@sylphx/synth-ruby",
  "version": "0.2.2",
  "description": "Ruby parser using Synth's universal AST - conversion layer over tree-sitter-ruby",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bunup",
    "prepack": "bun run build"
  },
  "keywords": [
    "ruby",
    "parser",
    "ast",
    "synth",
    "tree-sitter",
    "ruby2",
    "ruby3"
  ],
  "author": "SylphX",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:*",
    "tree-sitter": "^0.21.1",
    "tree-sitter-ruby": "^0.23.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}
