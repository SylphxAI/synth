{
  "name": "@sylphx/synth-php",
  "version": "0.1.0",
  "description": "PHP parser using Synth's universal AST - conversion layer over tree-sitter-php",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "php",
    "parser",
    "ast",
    "synth",
    "tree-sitter",
    "php7",
    "php8"
  ],
  "author": "SylphX",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:^",
    "tree-sitter": "^0.21.1",
    "tree-sitter-php": "^0.23.8"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
