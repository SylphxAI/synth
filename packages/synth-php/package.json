{
  "name": "@sylphx/synth-php",
  "version": "0.1.0",
  "description": "PHP parser using Synth's universal AST - conversion layer over tree-sitter-php",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "php",
    "parser",
    "ast",
    "synth",
    "tree-sitter",
    "php7",
    "php8"
  ],
  "author": "SylphX",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:^",
    "tree-sitter": "^0.21.1",
    "tree-sitter-php": "^0.23.8"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
