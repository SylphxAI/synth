{
	"name": "@sylphx/synth-php",
	"version": "0.2.3",
	"description": "PHP parser using Synth's universal AST - conversion layer over tree-sitter-php",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"test": "bun test",
		"test:watch": "bun test --watch",
		"build": "bunup",
		"prepack": "bun run build"
	},
	"keywords": [
		"php",
		"parser",
		"ast",
		"synth",
		"tree-sitter",
		"php7",
		"php8"
	],
	"author": "SylphX",
	"license": "MIT",
	"dependencies": {
		"@sylphx/synth": "workspace:*",
		"tree-sitter": "^0.21.1",
		"tree-sitter-php": "^0.23.8"
	},
	"devDependencies": {
		"typescript": "^5.6.0"
	}
}
