{
	"name": "@sylphx/synth-md",
	"version": "0.2.1",
	"description": "High-performance CommonMark parser for Synth - 26-42x faster than remark",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "bun build src/index.ts --outdir dist --target node --format esm --watch",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"bench": "bun bench",
		"build": "bunup",
		"prepack": "bun run build"
	},
	"keywords": [
		"markdown",
		"parser",
		"ast",
		"commonmark",
		"fast",
		"performance",
		"synth"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@sylphx/synth": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"mdast-util-to-string": "^4.0.0",
		"rehype-stringify": "^10.0.1",
		"remark": "^15.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"remark-stringify": "^11.0.0",
		"typescript": "^5.6.0",
		"unified": "^11.0.5"
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	}
}
