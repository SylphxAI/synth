{
  "name": "@sylphx/synth-metrics",
  "version": "0.1.0",
  "description": "Code metrics and complexity analysis for Synth AST - works across all languages",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "metrics",
    "complexity",
    "cyclomatic",
    "halstead",
    "ast",
    "synth",
    "analysis"
  ],
  "author": "Synth",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:^"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
