{
  "name": "@sylphx/synth-wasm-md",
  "version": "0.1.0",
  "description": "High-performance Markdown parser compiled to WebAssembly",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build:wasm": "cd ../../crates/wasm-md && wasm-pack build --target web --release && cp pkg/* ../../packages/synth-wasm-md/wasm/",
    "build": "bun run build:wasm && bun run build:js",
    "build:js": "bunup",
    "test": "bun test",
    "bench": "bun bench/wasm-vs-js.bench.ts",
    "prepack": "bun run build"
  },
  "keywords": [
    "markdown",
    "parser",
    "wasm",
    "webassembly",
    "ast",
    "fast",
    "performance",
    "synth"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "wasm",
    "README.md"
  ],
  "dependencies": {
    "@sylphx/synth": "workspace:*",
    "@vscode/tree-sitter-wasm": "^0.3.0",
    "tree-sitter-wasm-prebuilt": "^0.0.3",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@sylphx/synth-md": "workspace:*",
    "@tree-sitter-grammars/tree-sitter-markdown": "^0.3.2",
    "mitata": "^1.0.0",
    "tree-sitter-cli": "^0.25.10",
    "typescript": "^5.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
