{
	"name": "@sylphx/synth-wasm-md",
	"version": "0.1.0",
	"description": "High-performance Markdown parser compiled to WebAssembly (10-18x faster)",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build:wasm": "cd ../../crates/wasm-md && wasm-pack build --target web --release && cp pkg/* ../../packages/synth-wasm-md/wasm/",
		"build": "bun run build:wasm && bun run build:js",
		"build:js": "bunup",
		"test": "bun test",
		"bench": "bun bench/unified.bench.ts",
		"prepack": "bun run build:js"
	},
	"keywords": [
		"markdown",
		"parser",
		"wasm",
		"webassembly",
		"ast",
		"fast",
		"performance",
		"synth"
	],
	"author": "",
	"license": "MIT",
	"files": [
		"dist",
		"wasm",
		"README.md"
	],
	"dependencies": {
		"@sylphx/synth": "workspace:*"
	},
	"devDependencies": {
		"@sylphx/synth-md": "workspace:*",
		"mitata": "^1.0.0",
		"typescript": "^5.6.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
